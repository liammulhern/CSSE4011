# ┌────────────────────────────────────────────────────────────────────────────┐
# │ Builder: install & build assets                                          │
# └────────────────────────────────────────────────────────────────────────────┘
FROM node:18-alpine AS builder
LABEL org.opencontainers.image.authors="liam@your.org" \
      org.opencontainers.image.licenses="MIT"

WORKDIR /app
COPY vue/package*.json ./
RUN npm ci
COPY vue/ .
RUN npm run build   # outputs to /app/dist

# ┌────────────────────────────────────────────────────────────────────────────┐
# │ Prod: serve with nginx                                                  │
# └────────────────────────────────────────────────────────────────────────────┘
FROM nginx:1.24-alpine AS prod
LABEL org.opencontainers.image.authors="liam@your.org" \
      org.opencontainers.image.version="1.0.0"

# use non-root (nginx:alpine runs as nginx user by default)
USER nginx

# Copy built assets into nginx’s html dir
COPY --from=builder /app/dist /usr/share/nginx/html

#Expose HTTP port
EXPOSE 80

# Healthcheck against root
HEALTHCHECK --interval=30s --timeout=5s \
  CMD wget -qO- http://localhost/ || exit 1

# ┌────────────────────────────────────────────────────────────────────────────┐
# │ Dev: serve from vite
# └────────────────────────────────────────────────────────────────────────────┘
FROM node:18-alpine AS dev
WORKDIR /app

# install deps once
COPY vue/package*.json ./
RUN npm ci

# copy source
COPY vue/ .

# expose Vite default dev port
EXPOSE 5173

# run Vite in dev mode
CMD ["npm", "run", "dev"]

